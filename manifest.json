{
  "manifest_version": 3,
  "name": "Custom CSS for ERP",
  "version": "1.5",
  "description": "Added bg img, removed footer, added music player and chatbot inside the ERP, and many more",
  "author": "Bejawada Sai Mahendra",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://newerp.kluniversity.in/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://newerp.kluniversity.in/",
        "https://newerp.kluniversity.in/index.php"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["https://newerp.kluniversity.in/*"],
      "exclude_matches": [
        "https://newerp.kluniversity.in/",
        "https://newerp.kluniversity.in/index.php"
      ],
      "js": ["other.js", "chat.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["back.png", "runner.gif", "slava.mp3", "background_music.mp3", "chat.html", "chat-icon.png"],
      "matches": ["https://newerp.kluniversity.in/*"]
    }
  ],
  "icons": {
    "16": "l16.png",
    "48": "l48.png",
    "128": "l128.png"
  }
}