{
  "manifest_version": 3,
  "name": "Custom CSS for ERP",
  "version": "2.5",
  "description": "Added bg img, removed footer, added music player and chatbot inside the ERP,Modified home screen and many more",
  "author": "Bejawada Sai Mahendra",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://newerp.kluniversity.in/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://newerp.kluniversity.in/",
        "https://newerp.kluniversity.in/index.php"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["https://newerp.kluniversity.in/*"],
      "exclude_matches": [
        "https://newerp.kluniversity.in/",
        "https://newerp.kluniversity.in/index.php"
      ],
      "js": [
        "env.js",
        "gemini-ai.js",
        "other.js",
        "attendance.js",
        "creep.js",
        "gemini.js",
        "sort.js",
        "ccc.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        ".env",
        "back.png",
        "runner.gif",
        "music/*.mp3",
        "music/*.wav",
        "music/*.ogg",
         "cgpa6.ogg",
        "cgpa8.ogg",
        "cgpa9.ogg",
        "god.ogg",
     "planets/*.png",
        "roach.gif",
        "spider.gif",
        "creepybg.png"
      ],
      "matches": ["https://newerp.kluniversity.in/*"]
    }
  ],
  "icons": {
    "16": "l16.png",
    "48": "l48.png",
    "128": "l128.png"
  }
}